{{#if settings.toggle_category_tree}}
  {{#is settings.category_tree_type 'accordion'}}
    <h2 class="category-tree__title">Knowledge base</h2>
  {{/is}}
  <div class="category-tree {{#is settings.category_tree_type 'accordion'}}category-tree--accordion{{/is}}"
       id="category-tree">
    {{#each categories}}
      <section class="category-tree-item {{#is ../settings.category_tree_type 'accordion'}}category-tree-item--accordion-item{{/is}}"  {{#is ../settings.category_tree_type 'accordion'}}data-category-accordion{{/is}}>
        {{#if ../has_multiple_categories}}
          <h2 class="category-tree-item__title {{#is ../settings.category_tree_type 'accordion'}}category-tree-item__title--accordion-title{{/is}}" {{#is ../settings.category_tree_type 'accordion'}}data-category-accordion-title{{/is}}>
            <a class="category-tree-item__title-link" href="{{url}}">{{name}}</a>
          </h2>
        {{/if}}

        <div class="category-tree-item__sections row clearfix {{#is ../settings.category_tree_type 'accordion'}}category-tree-item__sections--accordion-content{{/is}}"  {{#is ../settings.category_tree_type 'accordion'}}data-category-accordion-content{{/is}}>
          {{#each sections}}
            <section class="column column--sm-6 column--md-4 section">
              <h3 class="section__title">
                <a class="section__title-link" href="{{url}}">{{name}}</a>
              </h3>
              {{#if articles}}
                <ul class="article-list">
                  {{#each articles}}
                    <li class="article-list-item {{#if promoted}}article-list-item--is-promoted{{/if}}">
                      {{#if promoted}}
                        <span class="fa fa-star" title="{{t 'promoted'}}"></span>
                      {{/if}}
                      <a class="article-list-item__link" href="{{url}}">{{title}}</a>
                    </li>
                  {{/each}}
                </ul>
                {{#if more_articles}}
                  <a href="{{url}}" class="btn btn--default see-all-articles">
                    {{t 'show_all_articles' count=article_count}}
                  </a>
                {{/if}}
              {{else}}
                <p>
                  <i><a href="{{url}}">{{t 'empty'}}</a></i>
                </p>
              {{/if}}
            </section>
          {{else}}
            <div class="column column--xs-12">
              <p>
                <i><a href="{{url}}">{{t 'empty'}}</a> </i>
              </p>
            </div>
          {{/each}}
        </div>

        {{#if more_sections}}
          <p>
            <a class="btn btn--default" href="{{url}}">{{t 'see_all_sections'}}</a>
          </p>
        {{/if}}
      </section>
    {{/each}}
  </div>
{{/if}}
